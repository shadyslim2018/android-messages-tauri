{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.ak.androidmessagesdesktop",
  "productName": "AndroidMessagesTauri",
  "version": "1.0.0",
  "build": { "frontendDist": "../public" },
  "bundle": {
    "active": true,
    "targets": ["appimage", "deb", "rpm"],
    "resources": ["icons"],
    "icon": [
      "icons/512x512.png",
      "icons/256x256.png",
      "icons/128x128.png",
      "icons/64x64.png",
      "icons/32x32.png"
    ],
    "category": "Utility",
    "shortDescription": "Unofficial desktop wrapper for Android Messages.",
    "longDescription": "A minimal, privacy-friendly Tauri desktop client for messages.google.com/web (Google Messages for Web)."
  }
}
